  background #fff

.js-follow-more,.js-follow-v
  display none

.follow-more-wp

.c-loading
  display none
  background #f8f8f8
  text-align center
  font-size .6rem
  padding .5rem 0
  p
    line-height 1.8
   
  .loading-icon
    display inline-block
    width 18px
    height 18px
    background url(./assets/loading.png)
    background-size  auto 18px
    animation  rotate .8s steps(12) infinite
  

@-webkit-keyframes rotate 
  0%
    transform rotate(0deg)
  
  100%
    transform rotate(360deg)
  

