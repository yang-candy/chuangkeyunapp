.c-wp
  height: 100%;
  display: flex;
  flex-flow: column;
  
//主客页
.c-auth-top
  .c-auth-bg
    width 100%
    height 6rem
    &:after
      content ''
      position fixed
      top 0
      left 0
      z-index 10
      width 100%
      height 3.2rem
      background url(./assets/layer.png) no-repeat
      background-size 100% 100%
    img
      width 100%
      height 100%
  .c-auth-info
    text-align center
    position relative
    .c-auth-head
      width 3rem
      height 3rem
      position absolute
      top -44px
      text-align center
      margin auto
      left 0
      right 0
      img
        width 100%
  .c-author-intro
    padding 26px 20px 15px
    text-align center
    h3
      font-size 17px
      color #333
      font-weight 400
      margin 0
    .c-auth-jj 
      font-size 12px
      color #666
      line-height 16px
      margin 7px 0
    .c-auth-tips span
      font-size 12px
      margin 0 20px
      &:first-of-type
        margin 0
        &:after
          content ''
          width 1px
          height 12px
          background #333
          display inline-block
          margin-left 20px
          vertical-align -2px
  .c-auth-follow
    display block
    width 105px
    height 32px
    line-height 32px
    margin auto
    margin-top: 15px;
    border 1px solid #ccc
    color #333
    text-decoration none
    font-size .6rem
    &.on
      color #ccc
      border 1px solid #eee
    
    span
      font-size .7rem
    

.c-tab-list 
  background #fff
  border-top .5rem solid #f6f6f6
  
  .c-tab-title
    display flex
    height 2.2rem
    line-height 2.2rem
    font-size .8rem
    color #999
    border-bottom 1px solid #f6f6f6
    & > li
      flex 1
      text-align center
      &.on
        position relative
        color #333
        &:after
          position absolute
          bottom 0
          content ''
          left 50%
          margin-left -10px
          width 20px
          height 1px
          background #333

.c-tab-ul
  > li
    position relative
    padding .8rem
    padding-bottom .6rem
    overflow hidden
    border-bottom 1px solid #f6f6f6
    
.c-media-info
  display inline-block
  > img
    width 1.5rem
    height 1.5rem
    margin-right .5rem
    border-radius 50%
    vertical-align -.6rem
    background url(./assets/pic_head.png) no-repeat
    background-size 100% 100%
    background-color #fff
    border 1px solid rgba(238, 238, 238, 0.3)
  > p
    display inline-block
    white-space nowrap
    max-width 210px
    overflow hidden
    text-overflow ellipsis
    font-size 14px
    vertical-align middle
.c-att-t
  position absolute;
  right .8rem;
  top .9rem;
  width 50px;
  height 25px;
  line-height 21px;
  text-align center;
  font-size 10px;
  color #2873ff;
  border 1px solid #2873ff;
  text-decoration none;
  box-sizing border-box;
  &.on
    border 1px solid #eee;
    color #ccc;
  
  > span
    vertical-align 1px;
  
.c-att-delete
  position: absolute;
  right: .8rem;
  top: 1.1rem;
  font-size: .6rem;
  text-decoration: none;
  background: url(./assets/delete.png) center no-repeat;
  height: 1rem;
  width: 1rem;
  background-size: 100% auto;
  &.on
    border: 1px solid #eee;
    color: #ccc;

.c-media-desc
  margin 11px 0 12px
  font-size .85rem

.c-media-content
  img
    width 100%
  
.c-media-oper
  clear both
  height 20px
  margin-top 8px
  font-size 12px
  color #C3C3C3
  line-height 20px
  > p
    float left
      
.c-media-qing-more
  overflow hidden
  width 100%
  margin-bottom 12px
  img
    float left
    width 33.3%
    height: auto; 
    padding-right 5px
    box-sizing border-box
    max-height 100%
    &:last-of-type
      padding-right 0
      
.c-media-video
  position relative
  overflow hidden
  .media-video-btn
    position absolute
    top 50%
    left 50%
    margin-left -25px
    margin-top -25px
    width 50px
    height 50px
    background rgba(0,0,0,0.3)
    border-radius 100px
    border 1px solid transparent
    &:after
      content ''
      position absolute
      top 16px
      left 18px
      width 0
      height 0
      border-top 9px solid transparent
      border-left 16px solid #fff
      border-bottom 9px solid transparent
  .c-media-time
    position: absolute;
    background: rgba(27, 27, 27, 0.4);
    border-radius: 2px;
    color: #fff;
    line-height: 1;
    padding: 2px;
    bottom: .4rem;
    right: .3rem;
    font-size: 10px;
    border-radius: 2px;
    width: 34px;
    height: 16px;
    line-height: 16px;
    text-align: center;

.c-media-audio
  overflow hidden
  margin-bottom 12px
  margin-top 11px
  .c-media-desc
    margin-right 10px
    word-break break-all
    
  .media-audio-pic
    position relative
    width 3.5rem
    height 3.5rem
    float right
    margin-right 0.9rem
    border-radius 50%
    border 2px solid #eee
    &:after
      content ''
      position absolute
      top 0
      bottom 0
      left 0
      right 0
      margin auto
      z-index 100
      width 0
      height 0
      border-top 9px solid transparent
      border-left 16px solid #fff
      border-bottom 9px solid transparent
    
    > img
      background url(./assets/audio_default.png) center no-repeat
      background-size 100% 100%
      display block
      width 100%
      min-height 100%
      border-radius 50%      
    
.c-empty
  flex 1
  align-items center
  justify-content center
  display flex
  margin-top -72px  
  p
    width 80px
    height 80px
    text-align center
    img
      width 100%


